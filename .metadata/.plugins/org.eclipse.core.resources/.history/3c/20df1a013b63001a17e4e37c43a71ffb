package guiImagePanel.Images;

import javax.swing.JPanel;
import java.awt.BorderLayout;
import javax.swing.JLabel;
import javax.swing.border.EmptyBorder;
import javax.swing.JButton;
import java.awt.Color;
import javax.swing.JCheckBox;

@SuppressWarnings("serial")
public class ControlPanel extends JPanel {

	/**
	 * Create the panel.
	 */
	public ControlPanel() {
		setLayout(new BorderLayout(0, 0));
		
		JPanel panelControlPanel = createControlPanel();
		add(panelControlPanel, BorderLayout.SOUTH);
		
		JCheckBox chckbxHouse = new JCheckBox("House");
		panelControlPanel.add(chckbxHouse);
		
		JCheckBox chckbx2 = new JCheckBox("TBD");
		panelControlPanel.add(chckbx2);
		
		JCheckBox chckbx3 = new JCheckBox("TBD");
		panelControlPanel.add(chckbx3);
		
		JButton btnSubmit = new JButton("Submit");
		panelControlPanel.add(btnSubmit);

	}

	private JPanel createControlPanel() {
		JPanel panelControlPanel = new JPanel();
		panelControlPanel.setBackground(new Color(176, 196, 222));
		panelControlPanel.setBorder(new EmptyBorder(15, 0, 15, 0));
		return panelControlPanel;
	}

}
