package labCollection;

import java.awt.Color;

public class Couch {

	public Color color;
	public Material material;
	
	public Couch(Color color, Material material){
		this.material = material;
		this.color = color;	
	}

	/**
	 * @return the color
	 */
	public Color getColor() {
		return color;
	}

	/**
	 * @return the material
	 */ 
	public Material getMaterial() {
		return material;
	}

	public boolean equals(Couch a, Couch b) {
		boolean isEqual = false;

		if (a.getColor().equals(b.getColor()) && a.getMaterial().equals(b.getMaterial()) ) {
			isEqual = true;
		} else {
			isEqual = false;
		}

		return isEqual;
	}
	
	@Override
	public String toString() {
		
		return String.format("Couch: #%02x %s", 
				getColor().getRGB(), getMaterial().toString().toLowerCase());
	}
	
}
