package labCollection;

import java.awt.Color;

public class Couch {

	public static Color color;
	public Material material;
	
	public Couch(Color color, Material material){
		material = this.material;
		color = this.color;	
	}

	/**
	 * @return the color
	 */
	public Color getColor() {
		return color;
	}

	/**
	 * @return the material
	 */
	public Material getMaterial() {
		return material;
	}

	public boolean equals(Couch c1, Couch c2) {
		boolean isEqual = false;

		if (c1.getColor().equals(c2.getColor()) && c1.getMaterial().equals(c2.getMaterial()) ) {
			isEqual = true;
		} else {
			isEqual = false;
		}

		return isEqual;
	}
	
	@SuppressWarnings("static-access")
	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		return sb.toString().format("Couch: #%.02xs %s", getColor(), getMaterial().toString().toLowerCase());
	}
	
}
