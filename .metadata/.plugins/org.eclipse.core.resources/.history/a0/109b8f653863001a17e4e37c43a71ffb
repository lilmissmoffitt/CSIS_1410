package guiImagePanel;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.EventQueue;
import java.awt.Font;

import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.SwingConstants;
import javax.swing.border.EmptyBorder;


@SuppressWarnings("serial")
public class PicturePanel extends JFrame {

	private JPanel contentPane;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					PicturePanel frame = new PicturePanel();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public PicturePanel() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 500);
		initializeContentPane();
		setLayout(new BorderLayout(0, 0));
		
		JPanel imagePanel = new ImagePanel();
		contentPane.add(imagePanel, BorderLayout.CENTER);
		
		JLabel lblTitle = createTitle();
		add(lblTitle, BorderLayout.NORTH);
		
		JPanel panel = new JPanel();
		add(panel, BorderLayout.SOUTH);
		
		JCheckBox chckbxHouse = new JCheckBox("House");
		panel.add(chckbxHouse);
		
		JButton btnSubmit = new JButton("Submit");
		panel.add(btnSubmit);
		
	}

	private void initializeContentPane() {
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		contentPane.setLayout(new BorderLayout(0, 0));
		setContentPane(contentPane);
	}
	private JLabel createTitle() {
		JLabel lblTitle = new JLabel("Your Dream House");
		lblTitle.setBorder(new EmptyBorder(15, 0, 15, 0));
		lblTitle.setForeground(new Color(255, 228, 196));
		lblTitle.setOpaque(true);
		lblTitle.setBackground(new Color(176, 196, 222));
		lblTitle.setFont(new Font("Times New Roman", Font.PLAIN, 29));
		lblTitle.setHorizontalAlignment(SwingConstants.CENTER);
		return lblTitle;
	}

}
