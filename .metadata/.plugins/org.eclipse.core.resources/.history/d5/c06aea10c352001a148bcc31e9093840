package nuisance;

public class Person {
	private String name;
	private int age;
	
	public Person(String name, int age) {
		this.name = name;
		this.age = age;
	}
	
	public String getName() {
		return name;
	}
	
	public int getAge() {
		if (age < 1 || age > 150 ) {
		
		throw new IllegalArgumentException("Age must be between 1 - 150");
		}
		else {
			return age;
		}
	}
	
	public String toString() {
		return getName() + "(" + getAge() + ")";
	}
	
	public boolean equals(Person p) {
		boolean isEqual = false;
		
		if (p.equals(p)) {
			isEqual = true;
		}
		else {
			isEqual = false;
		}
		return isEqual;
	}

}
