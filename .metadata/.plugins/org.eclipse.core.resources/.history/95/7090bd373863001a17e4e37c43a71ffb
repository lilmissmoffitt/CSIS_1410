package guiImagePanel;

import java.awt.Color;
import java.awt.Graphics;

import javax.swing.ImageIcon;
import javax.swing.JPanel;
import java.awt.BorderLayout;
import javax.swing.JLabel;
import javax.swing.SwingConstants;
import java.awt.Font;
import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.border.EmptyBorder;

@SuppressWarnings("serial")
public class ImagePanel extends JPanel {
	
	private ImageIcon[] houses = {
			new ImageIcon(ImagePanel.class.getResource("/guiImagePanel/Images/house1.png")),
			new ImageIcon(ImagePanel.class.getResource("/guiImagePanel/Images/house2.png")),
			new ImageIcon(ImagePanel.class.getResource("/guiImagePanel/Images/house3.png"))
	};

	/**
	 * Create the panel.
	 */
	public ImagePanel() {
		this.setOpaque(true);
		setLayout(new BorderLayout(0, 0));
		
		JLabel lblTitle = createTitle();
		add(lblTitle, BorderLayout.NORTH);
		
		JPanel panel = new JPanel();
		add(panel, BorderLayout.SOUTH);
		
		JCheckBox chckbxHouse = new JCheckBox("House");
		panel.add(chckbxHouse);
		
		JButton btnSubmit = new JButton("Submit");
		panel.add(btnSubmit);
	}

	private JLabel createTitle() {
		JLabel lblTitle = new JLabel("Your Dream House");
		lblTitle.setBorder(new EmptyBorder(15, 0, 15, 0));
		lblTitle.setForeground(new Color(255, 228, 196));
		lblTitle.setOpaque(true);
		lblTitle.setBackground(new Color(176, 196, 222));
		lblTitle.setFont(new Font("Times New Roman", Font.PLAIN, 29));
		lblTitle.setHorizontalAlignment(SwingConstants.CENTER);
		return lblTitle;
	}
	
	@Override
	protected void paintComponent(Graphics g) {
		super.paintComponent(g);
		this.setBackground(Color.CYAN);
		
		ImageIcon icon = new ImageIcon(ImagePanel.class.getResource("/guiImagePanel/Images/house1.png"));
		icon.paintIcon(null, g, 100, 50);
	}
	
	public void update() {
		
	}
}
