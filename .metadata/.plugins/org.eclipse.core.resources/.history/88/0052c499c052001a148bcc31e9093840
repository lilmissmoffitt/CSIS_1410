package nuisance;

public class Friend extends Person{
	private Hobby hobby;
	Friend[] friends;
	
	public Friend(String name, int age, Hobby hobby) {
		super(name, age);
		this.hobby = hobby;
	}
	
	public String chill() {
		return getName() + " is chilling";
	}
	
	public String play(Friend[] friends) {
		
		switch(friends.length - 1) {
		
		case 1:
			return "playing " + hobby + " with " +
					friends[0];
		case 2:
			return "playing " + hobby + " with "+
					friends[0] + " and " + friends[1];
		case 3: 
			return "playing " + hobby + " with "+
					friends[0] + ", " + friends[1] + ", and "+
					friends[2];
		default:
			return "playing " + hobby;
		}
	}
	
	public String toString() {
		return getName() + "(" + getAge() + ") " + hobby; 
	}
	
	public boolean equals(Friend f) {
		boolean isEqual = false;
		
		if (f.equals(friends)) {
			isEqual = true;
		}
		else {
			isEqual = false;
		}
		return isEqual;
	}
	
	
}
