package labCollection;

import java.awt.Color;

public class Couch {

	public Color color;
	public Material material;
	
	public Couch(Color color, Material material){
		material = this.material;
		color = this.color;
		
	}

	/**
	 * @return the color
	 */
	public Color getColor() {
		return color;
	}

	/**
	 * @return the material
	 */
	public Material getMaterial() {
		return material;
	}
	
	@Override
	public boolean equals(Couch c) {
		boolean isEqual = false;

		if (c.getColor().equals(getMaterial())) {
			isEqual = true;
		} else {
			isEqual = false;
		}

		return isEqual;
	}
	
	@SuppressWarnings("static-access")
	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		return sb.toString().format("Couch: #%.02xs %s", getColor(), getMaterial());
	}
	
}
