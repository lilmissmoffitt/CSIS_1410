package nuisance;

public class Friend extends Person{
	private Hobby hobby;
	Friend[] friends;
	
	public Friend(String name, int age, Hobby hobby) {
		super(name, age);
		this.hobby = hobby;
	}
	
	public String chill() {
		return getName() + " is chilling";
	}
	
	public String play(Friend[] friends) {
		
		switch(friends.length) {
		
		case 1:
			return "playing " + hobby + " with " +
					friends[1];
		case 2:
			return "playing " + hobby + " with "+
					friends[1] + " and " + friends[2];
		case 3: 
			return "playing " + hobby + " with "+
					friends[1] + ", " + friends[2] + ", and "+
					friends[3];
		default:
			return "playing " + hobby;
		}
	}
	
	public String toString() {
		return getName() + "(" + getAge() + ") " + hobby; 
	}
	
	public boolean equals(Friend f) {
		boolean isEqual = false;
		
		if (f instanceof Friend) {
			for(int i = 0; i < 4; i++) {
				if(f == friends[i]) {
					isEqual = true;
				}
			}
		}
		else {
			isEqual = false;
		}
		return isEqual;
	}
	
	
}
